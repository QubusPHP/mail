{
    "name": "qubus/mail",
    "description": "Mailer component using Swiftmailer.",
    "keywords": [
        "mail",
        "mailer",
        "swiftmailer",
        "smtp",
        "sendmail"
    ],
    "homepage": "https://github.com/QubusPHP/mail",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Joshua Parker",
            "email": "joshua@joshuaparker.dev",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=8.2",
        "qubus/config": "^3",
        "qubus/exception": "^3",
        "swiftmailer/swiftmailer": "^6"
    },
    "require-dev": {
        "mockery/mockery": "^1.3.1",
        "phpunit/phpunit": "^9.0",
        "qubus/qubus-coding-standard": "^1.1",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "Qubus\\Mail\\": ""
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit --colors=always",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
